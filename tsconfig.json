{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Type Checking
    "noImplicitAny": true,

    // Modules
    // "baseUrl": ""
    // "paths": {},
    "module": "ES2022",
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"]
}
